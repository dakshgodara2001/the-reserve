# Priority scoring weights
BASE_WAIT_WEIGHT=1.0
GESTURE_WEIGHT=30.0
FRUSTRATION_WEIGHT=50.0
VERBAL_REQUEST_WEIGHT=40.0
PAYMENT_READY_WEIGHT=20.0
