# Application settings
DEBUG=true
APP_NAME="Restaurant AI Assistant"

# Database
DATABASE_URL=sqlite+aiosqlite:///./restaurant.db

# Vision settings
YOLO_MODEL=yolov8n.pt
DETECTION_CONFIDENCE=0.5
POSE_CONFIDENCE=0.5

# Audio settings
WHISPER_MODEL=base
SAMPLE_RATE=16000

